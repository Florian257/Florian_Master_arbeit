issn = {1550235X},
journal = {Physical Review B - Condensed Matter and Materials Physics},
number = {20},
pages = {12812--12824},
title = {{Ultrafast dynamics of hot electrons and holes in copper: Excitation, energy relaxation, and transport effects}},
